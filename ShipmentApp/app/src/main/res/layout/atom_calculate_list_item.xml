<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:id="@+id/list_item_calculate_layout"
android:orientation="horizontal">

    <TextView
        android:id="@+id/name_cal"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:text="1"/>

    <TextView
        android:id="@+id/weight_cal"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:text="@string/EnterItem_TextView_ZeroValue"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <TextView
        android:id="@+id/qtn_cal"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:layout_marginLeft="5dp"
        android:text="@string/EnterItem_TextView_ZeroValue"
        android:textAppearance="?android:attr/textAppearanceSmall"/>

    <ImageButton
        android:id="@+id/remove_cal"
        android:layout_width="@dimen/width_button"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dp"
        android:background="#b13537"
        android:src="@android:drawable/ic_menu_delete" />

</LinearLayout>